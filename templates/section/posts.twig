{% for post in posts %}
    <div class="row mb-2 bg-light" style="border: 1px solid #ccc">
        <div class="p-3">

            {%  if post.img_path != ''%}
                <img src="{{ asset_url(post.img_path) }}" class="card-img-top" alt="{{ post.title|escape }}">
            {% else %}
                <img src="{{ asset_url('img/les.jpg') }}" class="card-img-top" alt="{{ post.title|escape }}">
            {% endif %}
            <div class="mt-3">
                <a href="{{ url(post.url_key) }}" ><h5 class="card-title">{{ post.title|escape }}</h5></a>
                <p class="mt-2">{{ post.description|escape }}</p>
                <span class="text-muted">  {{ post.published_date|date("F d ,Y")}} </span>
                <a href="{{ url(post.url_key)}}" class="btn btn-primary">Подробнее</a>
            </div>
        </div>
    </div>
{% endfor %}