<nav aria-label="pagination">
    <ul class="pagination">
        {% if pagination.current > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{url('gallery/'~(pagination.current-1)) }}">Назад</a>
            </li>
        {% endif %}
        {% for page in 1..pagination.paging %}
            <li class="page-item {% if pagination.current==page%} active {% endif %}">
                <a class="page-link" href="{{url('gallery/'~page) }}">{{ page }}</a>
            </li>
        {% endfor %}
        {% if pagination.current < pagination.paging %}
            <li class="page-item">
                <a class="page-link" href="{{url('gallery/'~(pagination.current+1)) }}">Вперед</a>
            </li>
        {% endif %}
    </ul>
</nav>